default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Konfigurera App Store Connect API-nyckel
    api_key = app_store_connect_api_key(
      key_id: "WW3CKRBFQ2",
      issuer_id: "69a6de6f-0031-47e3-e053-5b8c7c11a4d1",
      key_filepath: "./AuthKey_WW3CKRBFQ2.p8"
    )

    # S√§tt build-nummer baserat p√• tidsst√§mpel
    build_number = Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Vitaly.xcodeproj"
    )

    UI.message("üì¶ Bygger build #{build_number}")

    # Bygg appen
    build_app(
      scheme: "Vitaly",
      project: "Vitaly.xcodeproj",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates"
    )

    # Ladda upp till TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )

    UI.success("‚úÖ Build #{build_number} uppladdad till TestFlight!")
  end

  desc "√ñka major version (1.0.0 -> 2.0.0)"
  lane :bump_major do
    increment_version_number(
      bump_type: "major",
      xcodeproj: "Vitaly.xcodeproj"
    )
    version = get_version_number(xcodeproj: "Vitaly.xcodeproj")
    UI.success("üì¶ Version √∂kad till #{version}")
  end

  desc "√ñka minor version (1.0.0 -> 1.1.0)"
  lane :bump_minor do
    increment_version_number(
      bump_type: "minor",
      xcodeproj: "Vitaly.xcodeproj"
    )
    version = get_version_number(xcodeproj: "Vitaly.xcodeproj")
    UI.success("üì¶ Version √∂kad till #{version}")
  end

  desc "Release to App Store"
  lane :release do
    # Konfigurera App Store Connect API-nyckel
    api_key = app_store_connect_api_key(
      key_id: "WW3CKRBFQ2",
      issuer_id: "69a6de6f-0031-47e3-e053-5b8c7c11a4d1",
      key_filepath: "./AuthKey_WW3CKRBFQ2.p8"
    )

    # S√§tt build-nummer baserat p√• tidsst√§mpel
    build_number = Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Vitaly.xcodeproj"
    )

    UI.message("üì¶ Bygger release build #{build_number}")

    # Bygg appen
    build_app(
      scheme: "Vitaly",
      project: "Vitaly.xcodeproj",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates"
    )

    # Ladda upp till App Store Connect f√∂r release
    upload_to_app_store(
      api_key: api_key,
      skip_screenshots: true,
      skip_metadata: false,
      force: true,
      submit_for_review: false,
      automatic_release: false,
      precheck_include_in_app_purchases: false
    )

    UI.success("‚úÖ Build #{build_number} uppladdad till App Store Connect!")
    UI.message("üîç G√• till App Store Connect f√∂r att skicka in f√∂r granskning")
  end

  desc "Ta screenshots f√∂r App Store"
  lane :screenshots do
    capture_screenshots(
      devices: [
        "iPhone 15 Pro Max",
        "iPhone 15 Pro",
        "iPhone SE (3rd generation)"
      ],
      languages: ["en-US", "sv"],
      clear_previous_screenshots: true,
      output_directory: "./screenshots"
    )
    UI.success("‚úÖ Screenshots tagna!")
  end
end
